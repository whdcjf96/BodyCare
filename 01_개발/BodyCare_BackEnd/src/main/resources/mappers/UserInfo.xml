    <!--    TODO: 기본페이지 데이터 입력-->
    <insert id="insertUserBasic" parameterType="com.example.bodycare_backend.model.UserInfo">
        INSERT INTO USER_INFO(USER_ID,
                              WEIGHT,
                              BODY_FAT,
                              MUSCLE_MASS,
                              KCAL_START,
                              KCAL,
                              KCAL_WEEKLY,
                              WEIGHT_GOAL,
                              WEIGHT_LOSS,
                              CREATED_TIME)
        VALUES (#{userID},
                #{weight},
                #{bodyFat},
                #{muscleMass},
                #{kcalStart},
                #{kcal},
                #{kcalWeekly},
                #{weightGoal},
                #{weightLoss},
                TO_CHAR(SYSDATE, 'YYYY-MM-DD HH24:MI:SS'),);
    </insert>

